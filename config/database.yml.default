default: &default
  adapter: postgresql
  encoding: utf8
  host: <%= ENV.fetch('POSTGRES_HOST') { 'localhost' } %>
  username: <%= ENV.fetch('POSTGRES_USERNAME') { ENV['USER'] } %>
  password: <%= ENV.fetch('POSTGRES_PASSWORD') { '' } %>
  pool: 5

development:
  <<: *default
  database: blog_development

test:
  <<: *default
  database: blog_test
